# BPR&D Meeting Service Environment Variables
# Copy to .env and fill in your actual keys

# --- LLM API Keys ---
XAI_API_KEY=your-xai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-google-ai-api-key-here
# Abacus.AI RouteLLM: model=qwen3-max, endpoint=https://routellm.abacus.ai/v1
# Primary key is the ChatLLM/Abacus key (s2_...809e). NOT the Deep Agent key (terminal-only).
ABACUS_PRIMARY_KEY=your-abacus-primary-key-here
ABACUS_BACKUP_KEY=your-abacus-backup-key-here

# --- GitHub ---
GITHUB_TOKEN=your-github-pat-here
GITHUB_REPO=REBEmpire/BPR-D

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# --- Service ---
PORT=8000
ENV=development
LOG_LEVEL=INFO

# --- Alchemical Forge ---
AETHERIAL_FORGE_ENABLED=false
