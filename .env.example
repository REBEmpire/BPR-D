# =============================================================================
# BPR&D API Configuration - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual API keys
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# xAI (Grok) - SuperGrok Subscription
# -----------------------------------------------------------------------------
XAI_API_KEY= # xAI API Key for Grok models
# Alternative variable name (some tools use this)
GROK_API_KEY= # Same as XAI_API_KEY

# -----------------------------------------------------------------------------
# Anthropic (Claude) - Claude Pro Subscription
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY= # Anthropic API Key for Claude models

# -----------------------------------------------------------------------------
# Google AI (Gemini) - Google AI Pro Subscription
# -----------------------------------------------------------------------------
GOOGLE_AI_API_KEY= # Google AI Studio API Key
# Alternative variable name (some tools use this)
GEMINI_API_KEY= # Same as GOOGLE_AI_API_KEY

# Legacy Jules/Codebuff key (optional - for coding platform integration)
JULES_LEGACY_KEY= # Legacy Jules/Codebuff API Key

# -----------------------------------------------------------------------------
# Abacus.AI - Abacus Pro Subscription
# -----------------------------------------------------------------------------
ABACUS_PRIMARY_KEY= # Primary Abacus.AI API Key
ABACUS_BACKUP_KEY= # Secondary Abacus.AI API Key (optional, legacy from ChatLLM)

# -----------------------------------------------------------------------------
# n8n Workflow Automation
# -----------------------------------------------------------------------------
# n8n API Key for programmatic workflow access
N8N_API_KEY= # Your n8n API key

# n8n Instance URL
N8N_BASE_URL=https://n8n.bprd.io # Your n8n instance URL

# n8n Workflow URL for AI Communications Hub (public/webhook access)
NEXT_PUBLIC_N8N_WORKFLOW_URL=

# -----------------------------------------------------------------------------
# Web Application & Verification
# -----------------------------------------------------------------------------
# Base URL for the local development server or deployed app
RESEARCH_BASE_URL=http://localhost:3000

# See docs/n8n-meeting-automation.md for meeting automation usage guide
# See _shared/skills/automation/n8n-integration/SKILL.md for API integration

