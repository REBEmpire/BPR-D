# Hugging Face Configuration
# Get your token from: https://huggingface.co/settings/tokens

# HF authentication token (REQUIRED)
HF_TOKEN=your_hugging_face_token_here

# HF dataset repository (REQUIRED)
# Format: your-username/repository-name
# Example: john-doe/epstein-docs-analysis
HF_DATASET_REPO=your-username/epstein-docs-analysis

# Processing Configuration (OPTIONAL)

# Session time budget in minutes (default: 60)
SESSION_TIME_BUDGET=60

# Maximum PDF size in MB (default: 50)
MAX_PDF_SIZE_MB=50

# Request timeout in seconds (default: 60)
REQUEST_TIMEOUT=60

# Logging level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
